<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_weight="2"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:weightSum="4">
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:id="@+id/btn_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/power"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/mute2"
                android:layout_weight="1"></com.example.udprcu.RcuButton>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/menu"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_media"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/media"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/info"
                android:layout_weight="1"></com.example.udprcu.RcuButton>
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/setting"
                android:layout_weight="1"></com.example.udprcu.RcuButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_audio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/audio"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/ttx"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_fav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/fav"
                android:layout_weight="1"></com.example.udprcu.RcuButton>
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_tvr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/tvr"
                android:layout_weight="1"></com.example.udprcu.RcuButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/back"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_epg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/epg"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_portal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/portal"
                android:layout_weight="1"></com.example.udprcu.RcuButton>
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_exit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/exit"
                android:layout_weight="1"></com.example.udprcu.RcuButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/red"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/green"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_yellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/yellow"
                android:layout_weight="1"></com.example.udprcu.RcuButton>
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/blue"
                android:layout_weight="1"></com.example.udprcu.RcuButton>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_volumeUp"
                android:background="@drawable/vol_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </com.example.udprcu.RcuButton>
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_volumeDown"
                android:background="@drawable/vol_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </com.example.udprcu.RcuButton>
        </LinearLayout>

        <com.example.udprcu.RcuButton
            android:id="@+id/btn_Direction"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ok5"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

        </com.example.udprcu.RcuButton>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_chanelUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ch_up"
                tools:ignore="SpeakableTextPresentCheck"></com.example.udprcu.RcuButton>
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_chanelDown"
                android:background="@drawable/ch_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </com.example.udprcu.RcuButton>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.example.udprcu.RcuButton
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:id="@+id/btn_pageUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/pageup"
            android:layout_weight="1"></com.example.udprcu.RcuButton>

        <com.example.udprcu.RcuButton
            android:layout_gravity="center"
            android:id="@+id/btn_pageDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:background="@drawable/pagedown"
            android:layout_weight="1"></com.example.udprcu.RcuButton>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:weightSum="5"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.udprcu.RcuButton
            android:layout_margin="2dp"
            android:id="@+id/btn_rewind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/reward"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck"></com.example.udprcu.RcuButton>
        <com.example.udprcu.RcuButton
            android:layout_margin="2dp"
            android:id="@+id/btn_forward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/forward"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck"></com.example.udprcu.RcuButton>
        <com.example.udprcu.RcuButton
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:id="@+id/btn_play_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/play_pause">
        </com.example.udprcu.RcuButton>

        <com.example.udprcu.RcuButton
            android:layout_margin="2dp"
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/stop"
            tools:ignore="SpeakableTextPresentCheck"></com.example.udprcu.RcuButton>

        <com.example.udprcu.RcuButton
            android:layout_margin="2dp"
            android:id="@+id/btn_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/record"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck"></com.example.udprcu.RcuButton>
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/num1"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/num2"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/num3"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/num4"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/num5"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/num6"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/num7"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/num8"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/num9"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/help"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/num0"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

            <com.example.udprcu.RcuButton
                android:layout_gravity="center"
                android:id="@+id/btn_last"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/last"
                android:layout_weight="1"></com.example.udprcu.RcuButton>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>